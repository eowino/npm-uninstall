{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "node",
        "removeComments": true,
        "baseUrl": "./src/",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/",
        "declaration": false,
        "sourceMap": false,
        "strictNullChecks": true,
        "importHelpers": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"]
}
